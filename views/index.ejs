<%- include ("partials/header.ejs") %>
<%- include ("partials/homenavbar.ejs") %>

<body>
    <div class="container">
        <hr>
        <div class="jumbotron">
            <h1 class="display-4">Bem-vindo</h1>
            <p class="lead"> Projeto Blog para aprendizagem </p>
            <hr class="my-4">
            <p> Descrição detalhada: Projeto feito para aprendizagem de node e tecnologias coniventes </p>
            <p class="lead">
              <a class="btn btn-primary btn-lg" href="#" role="button">Learn more</a>
            </p>
          </div>
        <hr>
        <% articles.forEach( article => { %>   <!-- nome da variavel passada da view-->
            <div class="card">
                <div class="card-header">
                    <h2> <%= article.title %> </h2>
                </div>
                <div class="card-body">
                    <a href=" /<%= article.slug %> " class="btn btn-success"> Ler Artigo </a>
                </div>
            </div>
            <br>
            <% }); %>
    </div>
</body>

